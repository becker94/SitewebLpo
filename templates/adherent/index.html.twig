{% extends 'base.html.twig' %}

{% block title %}Adherent index{% endblock %}

{% block body %}
    <h1>Adherent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomAdherent</th>
                <th>PrenomAdherent</th>
                <th>AdresseMailAdherent</th>
                <th>DomaineAdherent</th>
                <th>Temoignage</th>
                <th>ReferenceLinkedin</th>
                <th>Login</th>
                <th>MotDePasse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adherent in adherents %}
            <tr>
                <td>{{ adherent.id }}</td>
                <td>{{ adherent.nomAdherent }}</td>
                <td>{{ adherent.prenomAdherent }}</td>
                <td>{{ adherent.adresseMailAdherent }}</td>
                <td>{{ adherent.domaineAdherent }}</td>
                <td>{{ adherent.temoignage }}</td>
                <td>{{ adherent.referenceLinkedin }}</td>
                <td>{{ adherent.login }}</td>
                <td>{{ adherent.motDePasse }}</td>
                <td>
                    <a href="{{ path('app_adherent_show', {'id': adherent.id}) }}">show</a>
                    <a href="{{ path('app_adherent_edit', {'id': adherent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adherent_new') }}">Create new</a>
{% endblock %}
