{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomAdherent</th>
                <th>PrenomAdherent</th>
                <th>AdresseMailAdherent</th>
                <th>DomaineAdherent</th>
                <th>Temoignage</th>
                <th>ReferenceLinkedin</th>
                <th>Login</th>
                <th>MotDePasse</th>
                <th>Classe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nomAdherent }}</td>
                <td>{{ etudiant.prenomAdherent }}</td>
                <td>{{ etudiant.adresseMailAdherent }}</td>
                <td>{{ etudiant.domaineAdherent }}</td>
                <td>{{ etudiant.temoignage }}</td>
                <td>{{ etudiant.referenceLinkedin }}</td>
                <td>{{ etudiant.login }}</td>
                <td>{{ etudiant.motDePasse }}</td>
                <td>{{ etudiant.classe }}</td>
                <td>
                    <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etudiant_new') }}">Create new</a>
{% endblock %}
